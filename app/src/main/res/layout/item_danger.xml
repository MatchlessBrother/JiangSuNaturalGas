<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_rect_round_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="12mm"
    android:layout_marginRight="8mm"
    android:layout_marginLeft="8mm"
    android:layout_marginTop="12mm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6mm"
        android:paddingLeft="12mm"
        android:paddingRight="12mm"
        android:paddingTop="6mm">

        <TextView
            android:id="@+id/itemdanger_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12mm"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/default_font_black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/itemdanger_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/default_font_black"
            android:textSize="28sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:background="@color/default_divide_line"/>

    <TextView
        android:minLines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="left"
        android:textSize="30sp"
        android:paddingTop="6mm"
        android:paddingLeft="12mm"
        android:paddingRight="12mm"
        android:paddingBottom="6mm"
        android:id="@+id/itemdanger_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/default_font_black" />
</LinearLayout>