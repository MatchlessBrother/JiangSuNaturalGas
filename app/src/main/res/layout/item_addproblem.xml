<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:layout_width="180mm"
        android:layout_height="180mm"
        android:orientation="vertical"
        android:layout_marginBottom="20mm"
        android:background="@drawable/shape_rect_round_gray">

        <RelativeLayout
            android:id="@+id/item_addproblem_bigimg_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/item_addproblem_bigimg_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/xj"/>

            <ImageView
                android:id="@+id/item_addproblem_bitimg_play"
                android:scaleType="fitXY"
                android:layout_width="80mm"
                android:layout_height="80mm"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/icon_play_white"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_addproblem_smallimg"
            android:layout_width="66mm"
            android:layout_height="66mm"
            android:scaleType="fitXY"
            android:src="@mipmap/xj"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>